{
  "manifest_version": 3,
  "name": "Google Kalender Button",
  "version": "1.1",
  "description": "Öffnet Google Kalender in der Wochenansicht in einem neuen Tab.",
  "permissions": [
    "tabs"
  ],
  "action": {
    "default_title": "Google Kalender öffnen",
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "48": "icon.svg",
      "64": "icon.svg"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "gcal-sidebar-btn@example.com",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  }
}
